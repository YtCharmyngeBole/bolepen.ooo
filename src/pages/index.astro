---
import { Icon } from "astro-icon/components";

import { SOCIALS, SITE } from "../config.ts";
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title={`${SITE.title} â€“ ${SITE.description}`}>
  <div class="flex min-h-svh flex-col place-content-center items-center p-12">
    <h1
      class="text-layout-title leading-1 mb-4 text-center font-display text-2xl font-bold leading-tight text-gray-50"
    >
      That Charming BOLE
    </h1>
    <ul class="grid grid-cols-4 gap-3">
      {
        SOCIALS.map((item) => (
          <li>
            <a
              href={item.href}
              title={`Me on ${item.name}`}
              rel="noopener"
              class="hyperlink hyperlink--social-link flex items-center justify-center rounded-lg p-1"
            >
              <Icon name={`social/${item.name}`} class="size-7" />
            </a>
          </li>
        ))
      }
    </ul>
    <p class="mt-5 text-pretty text-center text-sm leading-tight text-gray-300">
      All these links also available on
      <a
        class="hyperlink hyperlink--underline hyperlink--basic font-bold"
        href="https://linktr.ee/YtCharmyngeBole">my linktree</a
      >
    </p>
  </div>
</BaseLayout>

<style>
  .hyperlink--social-link {
    --hyperlink-text--ground: oklch(70% 0.1914 31);
    --hyperlink-text--excited: var(--ambient-bg);
    --hyperlink-bg--ground: color-mix(in oklch, transparent, white 5%);
    --hyperlink-bg--excited: oklch(90% 0.0891 78);
  }
</style>
