---
import { Image } from "astro:assets";
import imgProfilePic from "#root/src/images/profilepic.png";
---

<figure>
  <Image
    src={imgProfilePic}
    alt="Drawing of Bole's head"
    width="256"
    densities={[1, 1.5, 2, 2.5, 3, 4]}
    loading="eager"
    fetchpriority="high"
  />
  <figcaption class="dimmed mt-3 text-center text-sm max-laptop:hidden">
    Artwork by <a
      href="https://x.com/l4zily"
      class="font-semibold text-gray-400">@L4ZILY</a
    >
  </figcaption>
</figure>
