---
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
import { SOCIALS } from "#config";
import imgProfilePic from "#root/src/images/profilepic.png";
---

<header class="flex items-center gap-6 max-laptop:flex-col laptop:gap-12">
  <Image
    src={imgProfilePic}
    alt="Drawing of Bole's head"
    width="256"
    densities={[1, 1.5, 2, 2.5, 3, 4]}
    loading="eager"
    fetchpriority="high"
  />
  <div
    class="flex flex-col items-center laptop:max-w-[32rem] laptop:items-start"
  >
    <h1 class="text-2xl max-laptop:text-center">
      <span
        class="leading-1 font-display font-bold leading-tight tracking-wide text-fadecream-300"
        >That Charming BOLE</span
      >
      <span class="align-[0.05rem] text-xl text-fadecream-600 max-laptop:hidden"
        >(@YtCharmyngeBole)</span
      >
    </h1>
    <p class="my-2 text-base/snug max-laptop:text-center laptop:mt-1">
      A chubby rodent doggo born in 1990s. <br class="laptop:hidden" />
      Welcome to my <em>bolepen</em>!
    </p>
    <ul
      class="mt-4 flex w-fit flex-wrap justify-start gap-x-3 gap-y-2.5 max-laptop:mb-4 max-laptop:grid max-laptop:grid-cols-4 max-laptop:justify-center max-laptop:gap-2.5"
    >
      {
        SOCIALS.map((item) => (
          <li>
            <a
              href={item.href}
              title={`Me on ${item.name}`}
              rel="me noopener"
              class="hyperlink hyperlink--social-link flex items-center rounded-lg shadow-md"
            >
              <Icon
                name={`social/${item.name.toLowerCase()}`}
                class="m-0.5 inline-block size-9 laptop:mx-1"
              />
              <span class="grow max-laptop:hidden laptop:mr-2.5">
                {item.name}
              </span>
            </a>
          </li>
        ))
      }
    </ul>
  </div>
</header>

<style>
  .hyperlink--social-link {
    --hyperlink-text--ground: theme("colors.orange.400");
    --hyperlink-text--excited: theme("colors.ambient-bg");
    --hyperlink-bg--ground: oklch(100% 0 0 / 5%);
    --hyperlink-bg--excited: theme("colors.lemon.300");
  }
</style>
