---
import { SITE } from "#config";

const endYear = new Date().getFullYear();
const formattedPeriod =
  SITE.startYear == endYear ? `${endYear}` : `${SITE.startYear} – ${endYear}`;
---

<footer
  class="text-custom-muted mb-16 mt-12 text-pretty text-sm font-semibold leading-tight tracking-wide max-laptop:text-center"
>
  &copy;&nbsp;{`${formattedPeriod} ${SITE.author}`}.
</footer>
