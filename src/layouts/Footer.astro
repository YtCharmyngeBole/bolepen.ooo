---
import { SITE } from "#src/config.ts";

const endYear = new Date().getFullYear();
const formattedPeriod =
  SITE.startYear == endYear ? `${endYear}` : `${SITE.startYear} – ${endYear}`;
---

<footer
  class="text-custom-muted max-laptop:text-center mt-12 mb-16 text-sm leading-tight font-semibold tracking-wide text-pretty"
>
  &copy;&nbsp;{`${formattedPeriod} ${SITE.author}`}.
</footer>
