---
import { SITE } from "../config.ts";

const endYear = new Date().getFullYear();
const formattedPeriod =
  SITE.startYear == endYear ? `${endYear}` : `${SITE.startYear} – ${endYear}`;
---

<footer
  class="dimmed-footer mb-16 mt-8 text-pretty text-center text-sm font-semibold leading-tight tracking-wide"
>
  &copy;&nbsp;{`${formattedPeriod} ${SITE.author}`}.
</footer>

<style>
  .dimmed-footer {
    @apply text-[var(--dimmed-color)];
    --dimmed-color: color-mix(in oklch, theme("colors.gray.400"), black 15%);
  }
</style>
