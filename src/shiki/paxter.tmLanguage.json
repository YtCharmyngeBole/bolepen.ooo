{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "paxter",
  "scopeName": "source.paxter",
  "patterns": [
    {
      "include": "#commands"
    }
  ],
  "repository": {
    "commands": {
      "patterns": [
        {
          "include": "#commands-with-args"
        },
        {
          "include": "#commands-embed-python"
        },
        {
          "include": "#commands-identifier-only"
        }
      ]
    },
    "commands-with-args": {
      "patterns": [
        {
          "begin": "(@)(\\w+)(#*)(\\{)",
          "end": "\\}\\3",
          "beginCaptures": {
            "1": {
              "name": "meta.decorator punctuation.decorator"
            },
            "2": {
              "name": "variable.parameter.command.paxter"
            },
            "3": {
              "name": "meta.decorator punctuation.decorator"
            },
            "4": {
              "name": "meta.decorator punctuation.decorator"
            }
          },
          "endCaptures": {
            "0": {
              "name": "meta.decorator punctuation.decorator"
            }
          },
          "patterns": [
            {
              "include": "#commands"
            }
          ],
          "name": "meta.command.paxter"
        }
      ]
    },
    "commands-embed-python": {
      "patterns": [
        {
          "begin": "@!?(#*)\\{",
          "end": "\\}\\1",
          "beginCaptures": {
            "0": {
              "name": "meta.decorator punctuation.decorator"
            }
          },
          "endCaptures": {
            "0": {
              "name": "meta.decorator punctuation.decorator"
            }
          },
          "patterns": [
            {
              "include": "source.python"
            }
          ],
          "name": "meta.command.paxter"
        }
      ]
    },
    "commands-identifier-only": {
      "patterns": [
        {
          "match": "(@)(\\w+)",
          "captures": {
            "1": {
              "name": "meta.decorator punctuation.decorator"
            },
            "2": {
              "name": "variable.parameter.command.paxter"
            }
          },
          "name": "meta.command.paxter"
        }
      ]
    }
  }
}
