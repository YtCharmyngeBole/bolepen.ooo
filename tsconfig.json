{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["node_modules", "vendor", "contrib", "dist"],
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "target": "ES2024",
    "plugins": [
      {
        "name": "@astrojs/ts-plugin"
      },
      {
        "name": "typescript-plugin-toml"
      }
    ]
  }
}
